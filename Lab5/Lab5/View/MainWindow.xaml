<Window x:Class="Lab5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
        xmlns:charting="clr-namespace:System.Windows.Controls.DataVisualization.Charting;assembly=System.Windows.Controls.DataVisualization.Toolkit"
        xmlns:command="http://www.galasoft.ch/mvvmlight"
        Title="MainWindow" Width="1000" Height="600"
        DataContext="{Binding Main, Source={StaticResource Locator}}">

    <Grid>
        <TabControl Margin="5">
            
            <!--First task-->
            <TabItem Header="Первая задача">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!--Charts-->
                    <charting:Chart Name="Charts" Grid.Column="0" Margin="3">
                        <charting:LineSeries IndependentValuePath="X" DependentValuePath="Y" ItemsSource="{Binding ChartData}">
                            <charting:LineSeries.DataPointStyle>
                                <Style TargetType="charting:LineDataPoint">
                                    <Setter Property="Opacity" Value="0"/>
                                    <Setter Property="Background" Value="Blue"/>
                                </Style>
                            </charting:LineSeries.DataPointStyle>
                        </charting:LineSeries>
                        <charting:Chart.Axes>
                            <charting:LinearAxis
                                Orientation="X"
                                Title="X"
                                ShowGridLines="True"/>
                            <charting:LinearAxis 
                                Orientation="Y"
                                Title="Y"
                                ShowGridLines="True"/>
                        </charting:Chart.Axes>
                    </charting:Chart>

                    <!--Results-->
                    <StackPanel Grid.Column="1">

                        <TextBlock Text="Метод прямоугольников:" 
                                   Margin="10, 10, 10, 5"/>
                        <TextBlock Text="{Binding GettedValueRectangles}"
                                   Margin="20,0,0,5"/>

                        <TextBlock Text="Метод трапеций:" 
                                   Margin="10, 10, 10, 5"/>
                        <TextBlock Text="{Binding GettedValueTrapezoidal}"
                                   Margin="20,0,0,5"/>

                        <TextBlock Text="Метод Симпсона:" 
                                   Margin="10, 10, 10, 5"/>
                        <TextBlock Text="{Binding GettedValueSimpsons}"
                                   Margin="20,0,0,5"/>

                        <TextBlock Text="Истинное значение интеграла:" 
                                   Margin="10, 10, 10, 5"/>
                        <TextBlock Text="{Binding RealValue}"
                                   Margin="20,0,0,5"/>
                        
                        <RadioButton Content="f(x)" Command="{Binding MyFunctionCommand}" IsChecked="True"/>
                        <RadioButton Content="f(x)+cos(10x)" Command="{Binding FirstOscillatingFunctionCommand}"/>
                        <RadioButton Content="f(x)+cos(100x)" Command="{Binding SecondOscillatingFunctionCommand}"/>

                    </StackPanel>
                </Grid>
            </TabItem>
            
            <!--Second task-->
            <TabItem Header="Вторая задача">
                
            </TabItem>
                     
        </TabControl>
    </Grid>
</Window>
